---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CodingNomad description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "Noto Serif Oriya", serif;
		font-optical-sizing: auto;
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	html {
		font-family: "Noto Serif Oriya", serif;
	}
</style>
